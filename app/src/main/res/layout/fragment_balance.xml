<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feature.balance.BalanceFragment">

    <TextView
        android:id="@+id/textViewYourBalanceIs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_balance_is"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textViewbalance"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewbalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewYourBalanceIs"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="+50" />

</androidx.constraintlayout.widget.ConstraintLayout>